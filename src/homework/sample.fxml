<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homework.Controller">
    <top>
        <TextArea fx:id="textArea" minHeight="300.0" minWidth="200.0" BorderPane.alignment="TOP_CENTER"/>
    </top>
    <bottom>
        <HBox spacing="15.0" BorderPane.alignment="BASELINE_CENTER">
            <TextField fx:id="textField" maxWidth="-Infinity" minWidth="100.0" onAction="#sendMsg" prefWidth="300.0"
                       BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="10.0"/>
                </padding>
            </TextField>
            <Button alignment="CENTER" onAction="#sendMsg" text="Отправить"/>
        </HBox>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
